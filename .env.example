# Service Ports
API_PORT=3000
WEB_PORT=80
INFLUX1_PORT=8086
INFLUX2_PORT=8087

# InfluxDB 1.8 (legacy) Configuration
INFLUX_URL=http://influxdb:8086
INFLUX_ADMIN_USER=admin
INFLUX_ADMIN_PASSWORD=admin123

# InfluxDB 2.x (new) Configuration
INFLUX2_URL=http://influxdb2:8086
INFLUX_TOKEN=my-super-secret-admin-token
INFLUX_ORG=dali
INFLUX_BUCKET=dali_devices
INFLUX2_INIT_USERNAME=admin
INFLUX2_INIT_PASSWORD=changeme
INFLUX2_INIT_ORG=dali
INFLUX2_INIT_BUCKET=dali_devices
INFLUX2_INIT_TOKEN=dali-dev-token

# Grafana Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafana

# Controller Configuration
# Path to controllers.json inside the container
CONTROLLER_CONFIG_PATH=/app/config/controllers.json
POLLING_INTERVAL_SEC=10

# Auth Configuration (Dashboard)
# Secret for signing JWT/Session cookies
SESSION_SECRET=change_this_to_a_long_random_string_in_production

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_USERNAME=admin
MQTT_PASSWORD=admin123
MQTT_TOPIC="DALI-PRO-IoT/jocedali/#"
